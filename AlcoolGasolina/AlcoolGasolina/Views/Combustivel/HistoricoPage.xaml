<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlcoolGasolina.Views.Combustivel.HistoricoPage"
             xmlns:converters="clr-namespace:AlcoolGasolina.Helpers.Converters;assembly=AlcoolGasolina"
             BackgroundColor="#CCCCCC">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNullOrEmptyBoolConverter x:Key="StringNullOrEmptyBoolConverter"></converters:StringNullOrEmptyBoolConverter>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ListView
            Margin="10"
            x:Name="listHistorico"
            CachingStrategy="RecycleElement" 
            SeparatorVisibility="None"
            HasUnevenRows="True"
            ItemsSource="{Binding ListHistorico}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="15" Padding="5" HasShadow="False" IsClippedToBounds="True" BackgroundColor="#FFFFFF" Margin="5">
                            <FlexLayout Direction="Column">
                                <FlexLayout.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Path=BindingContext.DelHistoricoCommand, Source={x:Reference listHistorico}}"
                                        CommandParameter="{Binding .}" />
                                </FlexLayout.GestureRecognizers>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="DATA: " FontAttributes="Bold" />
                                            <Span Text="{Binding Data}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="COMBUSTÍVEL: " FontAttributes="Bold" />
                                            <Span Text="{Binding Combustivel}"  />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="VALOR (L): " FontAttributes="Bold" />
                                            <Span Text="{Binding ValorLitro, StringFormat='{0:C2}'}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="VALOR ABASTECIDO: " FontAttributes="Bold" />
                                            <Span Text="{Binding Valor, StringFormat='{0:C2}'}"  />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label IsVisible="{Binding Litros,
                                           Converter={StaticResource StringNullOrEmptyBoolConverter}}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="LITROS: " FontAttributes="Bold" />
                                            <Span Text="{Binding Litros, StringFormat='{0:0.###}'}"  />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </FlexLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>            
        </ListView>
    </ContentPage.Content>
</ContentPage>