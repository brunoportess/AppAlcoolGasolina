<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlcoolGasolina.Views.MainPage"
             Title="Álcool x Gasolina"
             BackgroundColor="#ffffff"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#009688"
                   HorizontalOptions="FillAndExpand"
                   BorderColor="#009688"
                   CornerRadius="15"
                   HasShadow="True"
                   Margin="10">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding NavegarCommand}" CommandParameter="CalcularPage"/>
                </Frame.GestureRecognizers>
                <StackLayout
                    VerticalOptions="Center">
                    <Image Source="calculator.png" />
                    <Label Text="Calcular"
                            FontSize="Large"
                            FontAttributes="Bold"
                           TextColor="White"
                            HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#009688"
                   BorderColor="#009688"
                   CornerRadius="15"
                   Margin="10">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding NavegarCommand}" CommandParameter="Combustivel.Postos"/>
                </Frame.GestureRecognizers>
                <StackLayout 
                    Spacing="0">
                    <Image Source="gasStation.png" />
                    <Label Text="Postos próximos"
                           FontSize="Large"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#009688"
                   BorderColor="#009688"
                   CornerRadius="15"
                   Margin="10">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding NavegarCommand}" CommandParameter="Combustivel.AbastecerTabbedPage"/>
                </Frame.GestureRecognizers>
                <StackLayout 
                    Spacing="0">
                    <Image Source="gasStation.png" />
                    <Label Text="Abastecer"
                           FontSize="Large"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
